<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/center_layout_color_gray"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/lo_intr_commom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text=""
                android:textColor="@color/top_text_color_black"
                android:textSize="@dimen/top_text_size" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="@dimen/center_bottom_margin_top_s"
                android:background="@drawable/polyv_border_s"
                android:gravity="center"
                android:text="￥0"
                android:textColor="@color/center_bottom_text_color_red"
                android:textSize="@dimen/center_bottom_text_size_s" />

            <TextView
                android:id="@+id/tv_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_money"
                android:layout_alignTop="@id/tv_money"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="@dimen/center_bottom_tv_margin_left"
                android:layout_toRightOf="@id/tv_money"
                android:background="@drawable/polyv_border_s"
                android:gravity="center"
                android:text="0人在学"
                android:textColor="@color/center_bottom_text_color_blue"
                android:textSize="@dimen/center_right_text_size" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/lo_intr_commom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/center_bottom_margin_top_s" >

            <TextView
                android:id="@+id/tv_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程简介"
                android:textColor="@color/center_bottom_text_color_gray"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_brief"
                android:layout_marginTop="@dimen/center_bottom_margin_top"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="2"
                android:text=""
                android:textColor="@color/center_bottom_text_color_gray"
                android:textSize="@dimen/center_right_text_size_l" />

            <TextView
                android:id="@+id/tv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_sum"
                android:text="展开"
                android:padding="5dp"
                android:textColor="@color/center_bottom_text_color_red"
                android:textSize="@dimen/center_right_text_size_l"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            style="@style/lo_intr_commom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/center_bottom_margin_top_s"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="@color/center_bottom_text_color_gray"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/center_bottom_margin_top"
                android:maxLines="3"
                android:textColor="@color/center_bottom_text_color_gray"
                android:textSize="@dimen/center_right_text_size_l" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>